<div class ="container">
    <div class ="login-text-container">
        <div class ="row">
            <h2 class ="col-lg-6 col-lg-offset-3">新規登録</h2>
        </div>
    </div>
  <div class ="login-body-container" >
      <!--------------- 会員新規登録フォーム --------------->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "members/shared/error_messages", resource: resource %>
          <div class ="form-group row">
              <div class ="member-image">
                  <%= attachment_image_tag @member, :image, :fill,200,200, class: "image-squar col-lg-12", fallback: "/images/cropped-noimage.jpg" %>
              </div>
              <div class ="form-box col-lg-12"><%= f.attachment_field :image %></div>

              <div class ="control-label col-lg-12" >ユーザーネーム</div>
              <div class ="form-box col-lg-12">
                  <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "form-control", placeholder: "半角英数字" %>
              </div>
              <div class ="control-label col-lg-12">紹介文</div>
              <div class ="form-box col-lg-12">
                  <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class: "form-control", placeholder: "ひとこと" %>
              </div>

              <div class ="control-label col-lg-12">フリガナ</div>
              <div class ="form-box col-lg-6">
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control", placeholder: "セイ" %>
              </div>
              <div class ="form-box col-lg-6">
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control", placeholder: "メイ" %>
              </div>

              <div class ="control-label col-lg-12">名前</div>
              <div class ="form-box col-lg-6">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" , placeholder: "姓"%>
              </div>
              <div class ="form-box col-lg-6">
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "名" %>
              </div>

              <div class ="control-label col-lg-12">メールアドレス</div>
              <div class ="form-box col-lg-12">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class ="control-label col-lg-12">パスワード
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %>文字以上)</em>
                  <% end %>
              </div>
              <div class ="form-box col-lg-12">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class ="control-label col-lg-12">パスワード確認</div>
              <div class ="form-box col-lg-12">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
          </div>
          <div class="form-group row">
              <div class ="button">
                  <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
              </div>
          </div>
      <% end %>
      <!---------------------------------------------->
      <div class="row">
          <div class ="button">
              <%= render "members/shared/links" %>
          </div>
      </div>
  </div>
</div>
<script>
    $(function(){
      $('#member_image').on('change', function (e) {
      var reader = new FileReader();
      reader.onload = function (e) {
          $(".image-squar").attr('src', e.target.result);
      }
      reader.readAsDataURL(e.target.files[0]);
    });
    });
</script>

