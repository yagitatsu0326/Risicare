<div class ="edit-text-container">
	<div class ="row">
		<h2 class ="col-lg-10 col-lg-offset-1">EditProfile</h2>
	</div>
</div>
<div class ="edit-member-container">
	<div class ="row">
		<div class ="col-lg-10 col-lg-offset-1">
			<%= render 'layouts/error_messages_member'%>
			<%= form_with(model: @member, url: member_member_path(current_member), method: :patch, local: true) do |f| %>
				<div class ="row">
					<div class ="member-image">
					 	<%= attachment_image_tag @member, :image, :fill, 200,200, class: "image-squar col-lg-12", fallback: "cropped-noimage.jpg" %>
					</div>
					<%= f.attachment_field :image %>
				</div>
				<div class ="form-group row">
					<%= f.text_field :user_name, class: "post-form form-control col-lg-12", placeholder: "ユーザーネーム(半角英数字)" %>
				</div>
				<div class ="form-group row">
					<%= f.text_area :introduction, class: "post-form form-control col-lg-12", placeholder: "紹介文" %>
				</div>
				<div class="row button">
                	<%= f.submit "更新", class: "btn submit-btn btn-lg" %>
            	</div>
			<% end %>
		</div>
	</div>
</div>

