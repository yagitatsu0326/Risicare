<%= render 'member/posts/search_tag' %>
<div class ="container">
	<div class ="title-container">
		<div class ="row">
			<h2 class ="col-lg-10 col-lg-offset-1">Posts</h2>
			<p class ="col-lg-10 col-lg-offset-1">#<%= @tag.name %></p>
		</div>
	</div>
	<div class ="posts-container">
		<div class ="row">
			<div class ="col-xs-12">
				<div class ="row">
					<!---------- タグ関連投稿一覧画面 ---------->
					<% @tags.each do |tag| %>
						<div class ="col-xs-12 col-md-4">
							<div class ="row">
								<div class ="col-xs-12">
									<%= attachment_image_tag tag.post.member, :image, :fill, 35,35, class: "member-image", fallback: "cropped-noimage.jpg"%>
									<%= link_to member_member_path(tag.post.member.id) do %>
										<span class ="member-name" ><%= tag.post.member.user_name  %></span>
									<% end %>
								</div>
							</div>
							<div class ="row">
								<div class ="col-xs-12">
									<%= link_to member_post_path(tag.post.id) do %>
										<%= attachment_image_tag tag.post, :image, :fill, 300,300, class: "post-image" %>
									<% end %>
								</div>
							</div>
						</div>
					<% end %>
					<!--------------------------------------->
				</div>
			</div>
		</div>
	</div>
	<div class ="paginate-container row">
		<div class =" col-xs-12"><%= paginate @tags %></div>
	</div>
</div>