<div class ="container">
	<div class ="admin-title-container">
		<div class ="row">
			<div class ="flash-text col-lg-10 col-lg-offset-1"><p><%= flash[:notice] %></p></div>
			<h2 class ="col-lg-10 col-lg-offset-1">Q＆A</h2>
			<p class ="col-lg-10 col-lg-offset-1">
				質問累計<%= @questions.count%>件 (回答済 <%= @answered.count %> 回答未 <%= @unanswered %>)
			</p>
		</div>
	</div>
	<div class ="admin-body-container">
		<table class ="table table-hover table-inverse">
			<% @questions.each do |question| %>
				<tr class ="row">
					<td>
						<div class ="col-lg-12">
							<div class ="row">
								<div class ="col-lg-5">
									<%= attachment_image_tag question.member, :image, :fill, 30,30, class: "member-image" %>
									<%= question.member.user_name %><br>
									<%= question.body %>
								</div>
								<div class ="col-lg-5">
									<% if question.answer.present? %>
										<%= question.answer.body %>
									<% else %>
										<%= link_to new_admin_answer_path(question_id: question.id) do %>回答する<% end %>
									<% end %>
								</div>
								<div class ="col-lg-2">
									<%= question.created_at.strftime('%Y/%m/%d ') %><br>
									<% if question.answer.present? %>
										<%= link_to edit_admin_answer_path(question.answer.id) do %><i class="fas fa-edit"></i><% end %>
										<%= link_to admin_answer_path(question), method: :delete, data: {confirm: "削除しますか？"} do %>
											<i class="far fa-trash-alt"></i>
										<% end %>
									<% else %>
											<%= link_to admin_answer_path(question), method: :delete, data: {confirm: "削除しますか？"} do %>
												<i class="far fa-trash-alt"></i>
											<% end %>
									<% end %>
								</div>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>