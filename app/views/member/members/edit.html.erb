<div class ="container">
	<div class ="edit-text-container">
		<div class ="row">
			<h2 class ="col-lg-10 col-lg-offset-1">EditProfile</h2>
		</div>
	</div>
	<div class ="edit-member-container">
		<div class ="row">
			<div class ="col-lg-10 col-lg-offset-1">
				<%= form_with model: @member, url: member_member_path(current_member), method: :patch do |f| %>
					<div class ="row">
						<div class ="member-image">
						 	<%= attachment_image_tag @member, :image, :fill, 200,200, class: "col-lg-12", fallback: "cropped-noimage.jpg" %>
						 </div>
						 <%= f.label :image,'画像をアップロード', class: "btn btn-secondary rounded-pill" %>
						 <%= f.attachment_field :image, style: "display: none;" %>
					</div>
					<div class ="form-group row">
						<lavel class ="control-level">ユーザネーム</lavel>
						<%= f.text_field :user_name, class: "form-control col-lg-12" %>
					</div>
					<div class ="form-group row">
						<lavel class ="control-level">紹介文</lavel>
						<%= f.text_field :introduction, class: "form-control col-lg-12" %>
					</div>
					<div class="row new_item_submit button">
                    	<%= f.submit "更新", class: "btn btn-primary btn-lg" %>
                	</div>
				<% end %>
				<script>
					$(document).on('turbolinks:load', function() {
						$('#member-image').on('change', function(e){
							var reader = new FileReader();
							reader.onload = function(e){
								$('.image').attr('src', e.target.result);
							}
							render.readAsDataURL(e.target.files[0]);
						});
					});
				</script>
			</div>
		</div>
	</div>
</div>