<div class ="container">
	<div class ="login-text-container">
		<div class ="row">
			<h2 class ="col-xs-6 col-xs-offset-3">パスワード変更</h2>
		</div>
	</div>
	<div class ="login-body-container" >
		<!--------------- パスワード再設定フォーム --------------->
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= render "members/shared/error_messages", resource: resource %>
			<p class ="notice-text">＊アカウントに登録しているメールアドレスを入力してください</p>
			<div class="form-group row">
				<div class ="col-xs-12">
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
				</div>
			</div>
			<div class="form-group row">
		        <div class ="button">
		          <%= f.submit "パスワード再設定フォーム送信", class: "btn btn-success" %>
		        </div>
			</div>
		<% end %>
		<!----------------------------------------------------->
		<div class="row">
			<div class ="button">
				<%= render "members/shared/links" %>
			</div>
		</div>
	</div>
</div>