<div class ="container">
	<div class ="title-container">
		<div class ="row">
			<div class ="col-xs-10 col-xs-offset-1">
				<h2>Notice</h2>
				<%= link_to destroy_all_member_notifications_path, method: :delete, data: {confirm: "通知の全削除をします。よろしいですか？"} do %>
					<i class="far fa-trash-alt fa-2x icon"></i>
				<% end %>
			</div>
		</div>
	</div>
	<!---------- 通知一覧画面 ---------->
	<div class ="body-container">
		<div class ="row">
			<div class ="col-xs-12">
				<!----- 自分宛の通知があるかの条件分岐 ----->
				<% notifications = @notifications.where.not(notify_id: current_member.id) %>
				<% if notifications.exists? %>
					<%= render notifications %>
					<%= paginate notifications %>
				<% else %>
					<p>通知はありません</p>
				<% end %>
				<!-------------------------------------->
			</div>
		</div>
	</div>
	<!-------------------------------->
</div>