<div class ="container">
  <div class ="login-text-container">
    <div class ="row">
      <h2 class ="col-lg-6 col-lg-offset-3">ログイン</h2>
    </div>
  </div>
  <div class ="login-container" >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <div class ="control-label col-lg-12">メールアドレス</div>
        <div class ="form-box col-lg-12"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%></div>
      </div>

      <div class="form-group row">
        <div class ="control-label col-lg-12">パスワード</div>
        <div class ="form-box col-lg-12"><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group row">
          <div class ="form-text col-lg-12">
            <%= f.check_box :remember_me %>
            <lavel>保存しますか?</lavel>
          </div>
        </div>
      <% end %>

      <div class="form-group row">
        <div class ="button">
          <%= f.submit "ログイン", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class ="button">
        <%= render "members/shared/links" %>
      </div>
    </div>
  </div>
</div>

