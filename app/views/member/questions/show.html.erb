<div class ="container">
	<div class ="title-container">
		<div class ="row">
			<h2 class ="col-lg-10 col-lg-offset-1">Q&A</h2>
		</div>
	</div>
	<div class ="body-container">
		<div class ="row">
			<div class ="col-lg-12">
				<%= attachment_image_tag @question.member, :image, :fill, 30,30, class: "member-image" %>
				<%= @question.member.user_name%>さんより。
			</div>
		</div>
		<div class ="row">
			<div class ="question-text col-lg-12">
				<p><span>Q</span> <%= @question.body %></p>
			</div>
		</div>
		<div class ="row">
			<div class ="col-lg-12">
				<p><span>A</span> <%= @answer.body %></p>
			</div>
		</div>
	</div>
</div
