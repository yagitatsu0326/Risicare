<div class ="container">
	<div class ="title-container">
		<div class ="row">
			<h2 class ="col-xs-10 col-xs-offset-1">一問一答</h2>
		</div>
	</div>
	<div class ="body-container">
		<div class ="row">
			<div class ="col-xs-10 col-xs-offset-1">
				<div class ="row">
					<%= attachment_image_tag @question.member, :image, :fill, 30,30, class: "member-image" %><%= @question.member.user_name%><br>
					<%= @question.body %>
				</div>
			</div>
		</div>
		<div class ="row">
			<div class ="col-xs-10 col-xs-offset-1">
				<%= render 'layouts/error_messages_answer'%>
				<%=form_with(model: @answer, url: admin_answer_path(@answer.id), method: :patch, local: true) do |f| %>
					<div class ="form-group row">
						<%= f.text_area :body, class: "form-control col-xs-12", placeholder: "質問回答文記載"  %>
					</div>
					<div class ="row new_item_submit button">
						<%= f.submit "更新", class: "btn btn-primary btn-lg" %>
					</div>
				<% end %>
			</div>
		</div>
		</div>
	</div>
</div
