<div class ="title-container">
	<div class ="row">
		<h2 class ="col-lg-10 col-lg-offset-1">Q＆A</h2>
	</div>
</div>
<div class ="body-container">
	<div class ="row">
		<div class ="col-lg-10 col-lg-offset-1">
			<div class ="row">
				<%= attachment_image_tag @question.member, :image, :fill, 30,30, class: "member-image" %><%= @question.member.user_name%>
				<p><%= @question.body %></p>
			</div>
		</div>
		<div class ="col-lg-10 col-lg-offset-1">
			<%= form_with(model:[@question, @answer], url: admin_answers_path, local: true) do |f| %>
				<%= render 'layouts/error_messages', model: f.object %>
				<div class ="form-group row">
					<%= f.text_area :body, class: "post-form form-control col-lg-12", placeholder: "回答記入" %>
					<%= f.hidden_field :question_id, value: @question.id %>
				</div>
				<div class="row new_item_submit button">
                	<%= f.submit "投稿", class: "btn btn-primary btn-lg" %>
            	</div>
			<% end %>
		</div>
	</div>
</div>


