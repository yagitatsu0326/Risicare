<div class ="container">
    <div class ="login-text-container">
        <div class ="row">
            <h2 class ="col-xs-6 col-xs-offset-3">管理者ログイン</h2>
        </div>
    </div>
    <div class ="login-body-container" >
        <!---------- 管理者ログイン ---------->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class ="form-group row">
                <div class ="control-label col-xs-12">メールアドレス</div>
                <div class ="form-box col-xs-12">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
                </div>
                <div class ="control-label col-xs-12">パスワード</div>
                <div class ="form-box  col-xs-12">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>
                <% if devise_mapping.rememberable? %>
                    <div class ="form-text col-xs-12">
                        <%= f.check_box :remember_me %>
                        <lavel>保存しますか?</lavel>
                    </div>
                <% end %>
            </div>
            <div class="form-group row">
                <div class ="button">
                    <%= f.submit "ログイン", class: "btn btn-success btn-lg" %>
                </div>
            </div>
        <% end %>
        <!----------------------------------->
    </div>
</div>
