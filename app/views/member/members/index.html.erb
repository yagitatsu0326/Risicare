<div class ="title-container">
	<div class ="row">
		<h2 class ="col-lg-10 col-lg-offset-1">Users</h2>
		<P class ="col-lg-10 col-lg-offset-1">登録者数<%= @members.count %>人</P>
	</div>
</div>
<div class ="body-container">
	<div class ="row">
		<div class ="col-lg-12">
			<table class ="index-table table">
				<!----- 登録会員一覧表示 ----->
				<% @members.each do |member| %>
					<tr class ="row">
						<td>
							<%= link_to member_member_path(member.id) do %>
								<div class ="col-lg-2">
									<%= attachment_image_tag member, :image, :fill, 40,40, class: "member-image", fallback: "/images/cropped-noimage.jpg", size: "40x40" %>
								</div>
								<div class ="col-lg-10">
									<%= member.user_name %><br>
									<%= member.introduction %>
								</div>
							<% end %>
						</td>
					</tr>
				<% end %>
				<!-------------------------->
			</table>
		</div>
	</div>
</div>
