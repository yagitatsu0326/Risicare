<div class ="container">
	<div class ="title-container">
		<div class ="row">
			<h2 class ="col-lg-10 col-lg-offset-1">Posts</h2>
		</div>
	</div>
	<div class ="posts-container">
		<div class ="row">
			<div class ="col-lg-12">
				<div class ="row">
					<% @posts.each do |post| %>
						<div class ="col-lg-4">
							<div class ="row">
								<div class ="col-lg-2">
									<%= attachment_image_tag post.member, :image, :fill, 35,35, class: "member-image", fallback: "cropped-noimage.jpg"%>
								</div>
								<div class ="member-name col-lg-10 ">
									<%= link_to member_member_path(post.member.id) do %>
										<%= post.member.user_name  %>
									<% end %>
								</div>
							</div>
							<div class ="row">
								<div class ="col-lg-12">
									<%= link_to member_post_path(post.id) do %>
										<%= attachment_image_tag post, :image, :fill, 300,300, class: "post-image" %>
									<% end %>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

