<div class ="container">
	<div class ="title-container">
		<div class ="row">
			<h2 class ="col-lg-10 col-lg-offset-1">問合せ</h2>
		</div>
	</div>
	<div class ="body-container">
		<div class ="row">
			<div class ="col-lg-10 col-lg-offset-1">
				<%= form_with model: @inquiry, url: confilm_path, local: true do |f| %>
					<div class ="form-group row">
						<lavel class ="control-level">名前(フルネーム)</lavel>
						<%= f.text_field :name, class: 'form-control col-lg-12' %>
					</div>
					<div class ="form-group row">
						<lavel class ="control-level">電話番号</lavel>
						<%= f.text_field :phone_number, class: 'form-control col-lg-12' %>
					</div>
					<div class ="form-group row">
						<lavel class ="control-level">メールアドレス</lavel>
						<%= f.text_field :email, class: 'form-control col-lg-12' %>
					</div>
					<div class ="form-group row">
						<lavel class ="control-level">問合せ内容</lavel>
						<%= f.text_area :body, class: "post-form form-control col-lg-12" %>
					</div>
					<div class="row new_item_submit button">
                    	<%= f.submit "確認", class: "btn btn-primary btn-lg" %>
                	</div>
				<% end %>
			</div>
		</div>
	</div>
</div>