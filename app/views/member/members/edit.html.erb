<div class ="title-container">
	<div class ="row">
		<h2 class ="col-lg-10 col-lg-offset-1">EditProfile</h2>
	</div>
</div>
<div class ="body-container">
	<div class ="row">
		<div class ="col-lg-10 col-lg-offset-1">
			<%= render 'layouts/error_messages_member'%>
			<!----- 会員情報編集フォーム ----->
			<%= form_with(model: @member, url: member_member_path(current_member), method: :patch, local: true) do |f| %>
				<div class ="row">
					<div class ="member-image">
					 	<%= attachment_image_tag @member, :image, :fill, 200,200, class: "image-squar col-lg-12", fallback: "/images/cropped-noimage.jpg" %>
					</div>
				</div>
				<div class ="form-group row">
					<div class ="col-lg-12">
						<%= f.attachment_field :image %>
					</div>
					<div class ="col-lg-12">
						<%= f.text_field :user_name, class: "post-form form-control", placeholder: "ユーザーネーム(半角英数字)" %>
					</div>
					<div class ="col-lg-12">
						<%= f.text_area :introduction, class: "post-form form-control", placeholder: "紹介文" %>
					</div>
					<div class ="col-lg-6">
						<%= f.text_field :last_name_kana, class: "post-form form-control", placeholder: "セイ" %>
					</div>
					<div class ="col-lg-6">
						<%= f.text_field :first_name_kana, class: "post-form form-control", placeholder: "メイ" %>
					</div>
					<div class ="col-lg-6">
						<%= f.text_field :last_name, class: "post-form form-control", placeholder: "姓" %>
					</div>
					<div class ="col-lg-6">
						<%= f.text_field :first_name, class: "post-form form-control", placeholder: "名" %>
					</div>
					<div class ="col-lg-12">
						<%= f.text_field :email, class: "post-form form-control", placeholder: "メールアドレス" %>
					</div>
				</div>
				<div class="row button">
                	<%= f.submit "更新", class: "btn submit-btn btn-lg" %>
            	</div>
			<% end %>
			<!----------------------------->
		</div>
	</div>
</div>
<script>
	$(function(){
	  $('#member_image').on('change', function (e) {
	  var reader = new FileReader();
	  reader.onload = function (e) {
	      $(".image-squar").attr('src', e.target.result);
	  }
	  reader.readAsDataURL(e.target.files[0]);
	});
	});
</script>