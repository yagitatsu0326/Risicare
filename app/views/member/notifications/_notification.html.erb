<table class ="table table-hover table-inverse">
	<tr class ="row">
		<td class ="col-lg-1">
			<%= link_to member_post_path(notification.post) do %>
				<%= attachment_image_tag notification.post, :image, :fill, 40,40, class: "member-image" %>
			<% end %>
		</td>
		<td class ="col-lg-11">
			<%== notification_form(notification) %> <%="(#{time_ago_in_words(notification.created_at)}前)" %><br>
			<% if !@comment.nil? %>
				<p><%= @comment %></p>
			<% end %>
		</td>
	</tr>
</table>